/* login.wxss */

.tab_wrapper {
  display: flex;
  width: 100%;
  height: 88rpx;
}

.tab_item {
  width: 50%;
}

.tab_text {
  display: block;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  font-size: 28rpx;
  border-bottom: 1rpx solid #d9d9d9;
}

.tab_active {
  border-color: #049cff;
  color: #049cff;
}

.primary_text {
  color: #049cff;
}

.inline_block {
  display: inline-block;
}

.login_item {
  position: relative;
  height: 48rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #d9d9d9;
}

.verify_btn {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}

.register_tip {
  padding: 40rpx 30rpx;
  text-align: right;
  color: #555;
  font-size: 28rpx;
}

.forget_pwd {
  float: left;
}

.login_btn_box {
  padding: 100rpx 30rpx 0;
}

.login_btn {
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #049cff;
}
