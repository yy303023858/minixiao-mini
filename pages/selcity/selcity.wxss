/* selcity.wxss */

.header {
  position: relative;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 92rpx;
  text-align: center;
  background-color: #049cff;
}

.header_box {
  display: inline-block;
  width: 90%;
  height: 64rpx;
  margin-top: 14rpx;
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, 0.5);
}

.header_title {
  display: inline-block;
  vertical-align: middle;
  width: 150rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #fff;
}
.search_icon{
  display: inline-block;
  vertical-align: middle;
}

.input_holder {
  color: #fff;
}

.hot_list {
  display: flex;
  width: 650rpx;
  flex-wrap: wrap;
}

.hot_item {
  width: 25%;
  padding: 10rpx 0;
}

.hot_item_text {
  display: block;
  width: 80%;
  padding: 8rpx 0;
  margin: 0 auto;
  border: 1rpx solid #d9d9d9;
  border-radius: 6px;
  font-size: 32rpx;
  color: #282828;
  text-align: center;
}

.scrollView {
  height: calc(100vh - 92rpx);
}

.title {
  display: block;
  background-color: #efefef;
  color: #696969;
  font-size: 28rpx;
  line-height: 60rpx;
  text-indent: 30rpx;
}

.city_item {
  display: block;
  height: 92rpx;
  line-height: 92rpx;
  color: #282828;
  text-indent: 30rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #d9d9d9;
}

.letter_wrapper {
  position: fixed;
  right: 0;
  top: 92rpx;
  bottom: 0;
  width: 80rpx;
  display: flex;
  flex-direction: column;
  background-color: #fafafa;
  justify-content: space-between;
  border-left: 1rpx solid #d9d9d9;
}

.letter_box {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.letter {
  display: block;
  text-align: center;
  font-size: 24rpx;
}
