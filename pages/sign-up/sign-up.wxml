<!--sign-up.wxml-->
<view class="container">
  <view class="sign_up_box">
    <form bindsubmit="formSubmit">
      <view class="sign_up_item">
        <input placeholder="请输入手机号或邮箱" confirm-type="next" name="username" />
      </view>
      <view class="sign_up_item">
        <input placeholder="请输入密码" confirm-type="next" name="password" password/>
      </view>
      <view class="sign_up_item">
        <input placeholder="请输入验证码" maxlength="6" name="verifycode" />
        <text class="primary_text verify_btn">获取验证码</text>
      </view>
      <view class="register_tip">
        <view class="radio_box">
          <label class="radio">
            <checkbox class="radio_icon" value="{{readed}}" checked="{{readed}}" color="#049cff"/>我已阅读并同意
          </label>
          <text class="primary_text">《迷你校用户协议》</text>
        </view>
        <navigator class="primary_text inline_block" url="/pages/login/login" open-type="navigateBack">登录</navigator>
      </view>
      <view class="sign_up_btn_box">
        <button class="sign_up_btn" formType="submit">注册</button>
      </view>
    </form>
  </view>
