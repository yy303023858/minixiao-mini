/* feedback.wxss */

.textarea_wrapper {
  display: block;
  width: 100%;
  height: 500rpx;
  border-bottom: 1rpx solid #d9d9d9;
}

.textarea {
  display: block;
  width: calc(100% - 60rpx);
  height: 400rpx;
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.count_text {
  display: block;
  padding-right: 30rpx;
  text-align: right;
  color: #b2b2b2;
}

.login_btn_box {
  padding: 100rpx 30rpx 0;
}

.login_btn {
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #049cff;
}
