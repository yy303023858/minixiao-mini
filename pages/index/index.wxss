/**index.wxss**/

.scroll_view {
  height: 100vh;
}

.header {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 92rpx;
  text-align: center;
  transition: 0.3s;
  background-color: rgba(255, 255, 255, 0.1);
}

.header_box {
  display: inline-block;
  width: 90%;
  height: 64rpx;
  margin-top: 14rpx;
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, 0.5);
}
.blueHeader{
  background-color: rgba(4, 156, 255, 1);
}
.header_box .iconfont, .header_box .header_title {
  line-height: 64rpx;
  font-size: 28rpx;
  color: #fff;
}
.icon_img{
  vertical-align: middle;
}

.swiper {
  width: 750rpx;
  height: 348rpx;
}

.img {
  width: 100%;
}

.nav_wrapper {
  padding: 32rpx 0 20rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 30rpx solid #eee;
}

.nav_img {
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
}

.nav_item {
  width: 100%;
  text-align: center;
}

.nav_name {
  font-size: 32rpx;
  color: #464646;
}

.hot_job {
  padding: 0 20rpx;
}

.hot_img {
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  padding-right: 14rpx;
}

.hot_text {
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
}

.gird_view {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #d9d9d9;
}

.gird_item {
  width: 33.333333333%;
  box-sizing: border-box;
  border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.gird_item:nth-child(3n) {
  border-right: none;
}

.gird_img {
  display: block;
  margin: 0 auto;
  width: 160rpx;
  height: 160rpx;
}

.info_job {
  display: block;
  font-size: 30rpx;
  color: #464646;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.salary {
  display: block;
  line-height: 44rpx;
  color: #f23023;
  text-align: center;
  font-size: 28rpx;
}
