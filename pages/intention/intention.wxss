/* intention.wxss */

.intention_item {
  display: flex;
  height: 48rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #d9d9d9;
}

.intention_text {
  display: inline-block;
  width: 200rpx;
  line-height: 48rpx;
}

.intention_input {
  flex-grow: 1;
  height: 48rpx;
  font-size: 32rpx;
  color: #333;
}

.picker_holder {
  color: #b5b5b5;
}

.login_btn_box {
  padding: 100rpx 30rpx 0;
}

.login_btn {
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #049cff;
}
